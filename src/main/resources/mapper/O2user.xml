<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kosta.o2dao.O2UserDAO">
    
    <!-- 회원가입 -->
	<insert id="signUser" parameterType="com.kosta.o2dto.O2UserDTO">
		INSERT INTO User_3jo (
			user_id
			,pwd
			,nick_name
			,phoneno
			,email
			,user_name
			,birthday
			,addr
			,gender
			,grade
		) VALUES (
			#{user_id}
			,#{pwd}
			,#{nick_name}
			,#{phoneno}
			,#{email}
			,#{user_name}
			,#{birthday}
			,#{addr}
			,#{gender}
			,0
		)
	</insert>
	<!-- 아이디 중복 체크 -->
	<select id="checkUserId" parameterType="String" resultType="int">
		select count(*) from User_3jo
		where user_id = #{user_id}
	</select>

	<!-- 로그인 -->
	<select id="login" parameterType="com.kosta.o2dto.O2UserDTO" resultType="int" >
		select user_id, pwd
		  from User_3jo
		 where user_id = #{use_id}
		 and pwd = #{pwd}   
	</select>
</mapper>
