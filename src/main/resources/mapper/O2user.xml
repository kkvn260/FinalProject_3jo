<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kosta.o2dao.O2UserDAO">
    
    <select id="loginCheck" resultType="String">
		   select nick_name from User_3jo
		   where user_id = #{user_id} and pwd = #{pwd}
    </select>
    
    <select id="userInfo" resultType="com.kosta.o2dto.O2UserDTO">
      select user_id, nick_name, email
      from User_3jo
      where user_id = #{user_id} and pwd = #{pwd}
    </select>
    
    <insert id="registerUser">
      insert into User_3jo(user_id,pwd,nick_name,phoneno,email,user_name,birthday,addr,gender,grade)
      values (#{user_id},#{pwd},#{nick_name},#{phoneno},#{email},#{user_name},#{birthday},#{addr},#{gender},0)
    </insert>
 		


</mapper>
